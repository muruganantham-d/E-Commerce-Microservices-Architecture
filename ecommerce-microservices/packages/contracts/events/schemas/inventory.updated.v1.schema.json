{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ecom.contracts/events/inventory.updated.v1.schema.json",
  "title": "inventory.updated.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["eventId", "eventType", "timestamp", "version", "source", "payload"],
  "properties": {
    "eventId": { "type": "string", "format": "uuid" },
    "eventType": { "const": "inventory.updated" },
    "timestamp": { "type": "string", "format": "date-time" },
    "version": { "const": "v1" },
    "source": { "const": "product-service" },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["productId", "warehouseId", "delta", "previousQty", "newQty", "reason", "updatedAt"],
      "properties": {
        "productId": { "type": "string" },
        "warehouseId": { "type": "string" },
        "delta": { "type": "integer" },
        "previousQty": { "type": "integer", "minimum": 0 },
        "newQty": { "type": "integer", "minimum": 0 },
        "reason": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "examples": [
    {
      "eventId": "198b82e3-c7b4-45f4-ae53-d7a7f72771e3",
      "eventType": "inventory.updated",
      "timestamp": "2026-02-16T10:24:00.000Z",
      "version": "v1",
      "source": "product-service",
      "payload": {
        "productId": "prd_2001",
        "warehouseId": "wh_us_east_1",
        "delta": -2,
        "previousQty": 20,
        "newQty": 18,
        "reason": "order_allocated",
        "updatedAt": "2026-02-16T10:23:59.000Z"
      }
    }
  ]
}
