{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ecom.contracts/events/order.created.v1.schema.json",
  "title": "order.created.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["eventId", "eventType", "timestamp", "version", "source", "payload"],
  "properties": {
    "eventId": { "type": "string", "format": "uuid" },
    "eventType": { "const": "order.created" },
    "timestamp": { "type": "string", "format": "date-time" },
    "version": { "const": "v1" },
    "source": { "const": "order-service" },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["orderId", "userId", "items", "totalAmount", "currency", "status", "createdAt"],
      "properties": {
        "orderId": { "type": "string" },
        "userId": { "type": "string" },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["productId", "quantity", "unitPrice"],
            "properties": {
              "productId": { "type": "string" },
              "quantity": { "type": "integer", "minimum": 1 },
              "unitPrice": { "type": "number", "minimum": 0 }
            }
          }
        },
        "totalAmount": { "type": "number", "minimum": 0 },
        "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
        "status": { "type": "string", "enum": ["created", "confirmed", "cancelled"] },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "examples": [
    {
      "eventId": "ca9f27a1-e5aa-4959-97c0-992fe2248c4f",
      "eventType": "order.created",
      "timestamp": "2026-02-16T10:25:00.000Z",
      "version": "v1",
      "source": "order-service",
      "payload": {
        "orderId": "ord_3001",
        "userId": "usr_1001",
        "items": [
          {
            "productId": "prd_2001",
            "quantity": 2,
            "unitPrice": 34.99
          }
        ],
        "totalAmount": 69.98,
        "currency": "USD",
        "status": "created",
        "createdAt": "2026-02-16T10:24:59.000Z"
      }
    }
  ]
}
